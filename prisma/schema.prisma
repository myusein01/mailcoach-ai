datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  plan      Plan     @default(STARTER)
  credits   Int      @default(100)
  emails    Email[]
}

model Email {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  type      String
  input     String
  output    String
  createdAt DateTime @default(now())
}

enum Plan {
  STARTER
  PRO
  AGENCY
}
